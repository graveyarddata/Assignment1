{
  "steps": [
    {
      "name": "gcr.io/cloud-builders/docker",
      "args": [
        "build",
        "-t",
        "${_LOCATION}-docker.pkg.dev/$PROJECT_ID/${_REPOSITORY}/api:0.0.1",
        "./serving/api"
      ]
    },
    {
      "name": "gcr.io/cloud-builders/docker",
      "args": [
        "build",
        "-t",
        "${_LOCATION}-docker.pkg.dev/$PROJECT_ID/${_REPOSITORY}/ui:0.0.1",
        "./serving/ui"
      ]
    },
    {
      "name": "gcr.io/cloud-builders/docker",
      "args": [
        "push",
        "${_LOCATION}-docker.pkg.dev/$PROJECT_ID/${_REPOSITORY}/api:0.0.1"
      ]
    },
    {
      "name": "gcr.io/cloud-builders/docker",
      "args": [
        "push",
        "${_LOCATION}-docker.pkg.dev/$PROJECT_ID/${_REPOSITORY}/ui:0.0.1"
      ]
    },
    {
      "name": "gcr.io/google.com/cloudsdktool/cloud-sdk",
      "entrypoint": "gcloud",
      "args": [
        "run",
        "deploy",
        "prediction-api",
        "--image",
        "${_LOCATION}-docker.pkg.dev/$PROJECT_ID/${_REPOSITORY}/api:0.0.1",
        "--region",
        "us-central1",
        "--platform",
        "managed",
        "--port",
        "8080",
        "--cpu",
        "2",
        "--memory",
        "4G",
        "--allow-unauthenticated"
      ]
    },
    {
     "name": "gcr.io/google.com/cloudsdktool/cloud-sdk",
      "entrypoint": "gcloud",
      "args": [
        "run",
        "deploy",
        "prediction-ui",
        "--image",
        "${_LOCATION}-docker.pkg.dev/$PROJECT_ID/${_REPOSITORY}/ui:0.0.1",
        "--region",
        "us-central1",
        "--platform",
        "managed",
        "--port",
        "8080",
        "--cpu",
        "2",
        "--memory",
        "4G",
        "--set-env-vars",
        "PREDICTOR_API=https://prediction-api-102686535191.us-central1.run.app/",
        "--allow-unauthenticated"
      ]
    }
  ],
  "images": [
    "${_LOCATION}-docker.pkg.dev/$PROJECT_ID/${_REPOSITORY}/api:0.0.1",
    "${_LOCATION}-docker.pkg.dev/$PROJECT_ID/${_REPOSITORY}/ui:0.0.1"
  ],
  "options": { "logging": "CLOUD_LOGGING_ONLY" }
}




